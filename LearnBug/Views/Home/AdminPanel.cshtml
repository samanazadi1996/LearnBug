
@{
    ViewBag.Title = "AddGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style>
        .Items {
            margin: 20px;
            width: fix-contents;
            float: right;
            text-align: center;
            border: 3px solid darkcyan;
            border-radius: 5px;
            transition: 0.5s;
            box-shadow:0px 6px 8px 0px silver;
        }

            .Items:hover {
                transform: scale(1.2);
            }

            .Items img {
                margin: 10px;
                width: 100px;
                height: auto;
            }

            .Items span {
                font-size: 16px;
                font-family: 'Comic Sans MS';
            }
    </style>

}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>

        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><a href="/Home/AdminPanel">پنل مدیریتی</a></div>
                <div class="panel-body">
                    <!-- -->
                    <!-- -->
                    <div>

                        <a href="/Setting/Index">
                            <div class="Items">
                                <img src="~/Files/AdminPanel/Setting.png" />
                                <br />
                                <span>مدیریت سایت</span>
                            </div>
                        </a>

                        <a href="/Group/ManagementGroups">
                            <div class="Items">
                                <img src="~/Files/AdminPanel/Groups.png" />
                                <br />
                                <span>مدیریت گروهها</span>
                            </div>
                        </a>

                        <a href="/User/AllUsers">
                            <div class="Items">
                                <img src="~/Files/AdminPanel/Users.png" />
                                <br />
                                <span>مدیریت کاربران</span>
                            </div>
                        </a>


                    </div>

                    <!-- -->
                    <!-- -->
                </div>
            </div>
        </div>


    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
