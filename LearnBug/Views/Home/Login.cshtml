@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="~/Content/RSadmin/css/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="~/Content/RSadmin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/RSadmin/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/RSadmin/css/index.css" rel="stylesheet" />
    <link href="~/Content/RSadmin/css/reset.css" rel="stylesheet" />
    <link href="~/Content/css/markup.css" rel="stylesheet" />

    <title>log in</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <!-- main start -->
            <div class="col-md-4 col-md-offset-4 col-login">
                <div class="panel panel-default">
                    <div class="login-head">
                        <div class="login-top-text">ورود به ناحیه کاربری</div>
                        <span class="fa fa-lock login-lock"></span>
                    </div>
                    <div class="panel-body">
                        <!-- -->
                        @using (Html.BeginForm())
                        {
                            if (!string.IsNullOrEmpty(ViewBag.Message))
                            {
                        <center> <div style="color:red;border:2px solid red;border-radius:100%;"><b>@ViewBag.Message</b></div></center>
                        <br />
                            }
                            <div class="form-group">
                                <input name="Username" type="text" class="form-control" id="usr" placeholder="نام کاربری">

                            </div>
                            <div class="form-group">
                                <input name="Password" type="password" class="form-control" id="pwd" placeholder="کلمه عبور">
                            </div>
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBox("Rememberme")
                                    من را به خاطر بسپار
                                </label>
                            </div>
                            <button href="#" class="btn btn-login" role="button">ورود</button>
                            <hr>

                            <a href="/User/RegisterUser">ثبت نام</a>
                            <!-- -->
                        }

                    </div>
                </div>
            </div>
            <!-- main end -->
        </div>
    </div>
    <script src="~/Content/RSadmin/js/bootstrap.min.js"></script>
    <script src="~/Content/RSadmin/js/chart_config.js"></script>
    <script src="~/Content/RSadmin/js/jquery-2.2.3.min.js"></script>
    <script src="~/Content/RSadmin/js/mycode.js"></script>
    <script src="~/Content/RSadmin/js/chart.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
</body>

</html>