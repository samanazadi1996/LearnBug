@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <!-- App Favicon -->
    <link rel="shortcut icon" href="~/Files/Picture/Logo/Logo.png" />
    <!-- App title -->
    <title>ورود</title>
    <!-- App CSS -->
    <link href="~/Content/Mr-Admin/assets/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/responsive.css" rel="stylesheet" type="text/css" />


    <script src="~/Content/Mr-Admin/assets/js/modernizr.min.js"></script>

</head>
<body>

    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page">
        <div class="text-center">
            <a href="index.html" class="logo"><span>Learn<span>Bug</span></span></a>
            <h5 class="text-muted m-t-0 font-600">
                <b style="color:red;">@ViewBag.Message</b>

            </h5>
        </div>
        <div class="m-t-40 card-box">
            <div class="text-center">
                <h4 class="text-uppercase font-bold m-b-0">ورود</h4>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group col-md-12">
                        <div class="col-xs-12">
                            <input name="Username" class="form-control" type="text" required="" placeholder="نام کاربری">
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="col-xs-12">
                            <input class="form-control" type="password" required="" placeholder="پسورد" name="Password">
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <div class="checkbox checkbox-custom">
                                <input id="checkbox-signup" type="checkbox" name="Rememberme">
                                <label for="checkbox-signup">
                                    مرا به خاطر بسپار
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center m-t-30">
                        <div class="col-xs-12">
                            <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">ورود</button>
                        </div>
                    </div>

                    <div class="form-group m-t-30 m-b-0">
                        <div class="col-sm-12">
                            <a href="page-recoverpw.html" class="text-muted"><i class="fa fa-lock m-r-5"></i> آیا رمز خود را فراموش کرده اید؟</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- end card-box-->

        <div class="row">
            <div class="col-sm-12 text-center">
                <p class="text-muted">حساب کاربری ندارید? <a href="@Url.Action("Register","User")" class="text-primary m-l-5"><b>ثبت نام</b></a></p>
            </div>
        </div>

    </div>
    <!-- end wrapper page -->



    <script>
        var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <script src="~/Content/Mr-Admin/assets/js/jquery.min.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/bootstrap-rtl.min.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/detect.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/fastclick.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.slimscroll.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.blockUI.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/waves.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/wow.min.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.nicescroll.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="~/Content/Mr-Admin/assets/js/jquery.core.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.app.js"></script>

</body>
</html>