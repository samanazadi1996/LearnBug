@model ViewModels.LoginUserViewModel
@using Common.ReCaptcha
@{
    Layout = "~/Views/Shared/_Account.cshtml";
    ViewBag.Title = "ورود";
}
<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
    <div class="text-center">
        <a href="/" class="logo"><span class="text-primary">Learn<span class="text-danger">Bug</span></span></a>
    </div>
    <div class="m-t-40 card-box">
        <div class="text-center">
            <h4 class="text-uppercase font-bold m-b-0">ورود</h4>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <h5 class="text-muted m-t-0 font-600 text-center">
                    <b style="color:red;">@ViewBag.Message</b>
                    @Html.ValidationMessage("ReCaptcha",null,new { @class="text-danger"})
                </h5>
            </div>
            @using (Html.BeginForm())
            {
                @Html.GenerateCaptcha()
                <div class="form-group col-md-12">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(p => p.Username, new { @class = "form-control", placeholder = "نام کاربری" })
                        @Html.ValidationMessageFor(p => p.Username, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <div class="col-xs-12">
                        @Html.PasswordFor(p => p.Password, new {@class = "form-control", placeholder = "رمز عبور" })
                        @Html.ValidationMessageFor(p => p.Password, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-xs-12">
                        <div class="checkbox checkbox-custom">
                            <input type="checkbox" name="Rememberme" />
                            <label for="Rememberme">
                                مرا به خاطر بسپار
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center m-t-30">
                    <div class="col-xs-12">
                        <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">ورود</button>
                    </div>
                </div>

                <div class="form-group m-t-30 m-b-0">
                    <div class="col-sm-12">
                        <a href="page-recoverpw.html" class="text-muted"><i class="fa fa-lock m-r-5"></i> آیا رمز خود را فراموش کرده اید؟</a>
                    </div>
                </div>
            }
        </div>
    </div>s
    <!-- end card-box-->

    <div class="row">
        <div class="col-sm-12 text-center">
            <p class="text-muted">حساب کاربری ندارید? <a href="@Url.Action("Register","Account")" class="text-primary m-l-5"><b>ثبت نام</b></a></p>
        </div>
    </div>

</div>
<!-- end wrapper page -->