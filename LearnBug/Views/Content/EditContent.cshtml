
@model LearnBug.Models.DomainModels.Content

@{
    ViewBag.Title = "ویرایش مطلب";
}


<div>


    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">ویرایش کردن مطلب</div>
            <div class="panel-body">
                <!-- -->
                <div id="w1" class="grid-view">
                    <!-- -->
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="grid-view">
                            <div style="color:@ViewBag.style">
                                <h1>@ViewBag.message</h1>
                            </div>
                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">موضوع مطلب</span><br />
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Subject)
                            </div>
                            @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                            {
                                <div class="form-group" style="width:200px;">
                                    <span class="mytxt">قیمت دوره (تومان) </span><br />
                                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control",placeholder="Free" })
                                    @Html.ValidationMessageFor(model => model.Price)
                                </div>

                            }
                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">گروه مطلب</span><br />
                                @Html.DropDownList("groupId", (IEnumerable<SelectListItem>)ViewBag.Groups, new { @class = "form-control" })
                            </div>

                            <div class="form-group" style="width:90%;">
                                <span class="mytxt">توضیحات</span><br />
                                <input id="upload" class="hidden" type="file" name="image" value="" />
                                @Html.TextAreaFor(model => model.Description, new { id = "aaa", @class = "form-control", style = "height:150px;" })
                            </div>

                            <div>
                                <button class="btn btn-info"><div class="fa fa-2x fa-plus">ثبت ویرایش </div></button>
                            </div>
                        </div>
                    }
                    <!-- -->
                </div>
                <!-- -->
            </div>
        </div>
    </div>


</div>



@section Scripts {
    @*@Html.CKEditorHeaderScripts()*@
    <script src="~/Scripts/tinymce/tinyMane.js"></script>
    <script src="~/Scripts/tinymce/tinymce.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
