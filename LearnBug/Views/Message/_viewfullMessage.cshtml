
@model IEnumerable<LearnBug.Models.DomainModels.Message>

<div class="modal-dialog">
    <div class="modal-content" style="padding:10px;">

        <div>
            <a href="#jj" onclick="renderPartialViewMessage(@ViewBag.id)" class="fa fa-refresh pull-left" id="refresh"></a>
            <b style="font-size:18px;float:left;" id="modal-title">@ViewBag.name</b>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <hr />
        <div id="modal-body" class="pre-scrollable mce-arrow-down">

            <div id="scroll">
                @foreach (var item in Model)
                {

                    if (item.User.Username == User.Identity.Name)
                    {
                        <div style="background-color:aqua;text-align:right;border-radius:5px;padding:3px;" class="right">
                            @item.Text<br /><b>
                                @{
                                    if (item.Status == 0)
                                    {<span style="color:silver;"><b>✓</b></span>}
                                    else if (item.Status == 1)
                                    {<span style="color:silver;"><b>✓✓</b></span>}
                                    else if (item.Status == 2)
                                    {<span style="color:darkblue;"><b>✓✓</b></span>}
                                }

                            </b>@item.Datetime.ToPersianDate()
                        </div>
                    }
                    else
                    {
                        <div style="background-color:#fffa00;text-align:left;border-radius:5px;padding:3px;" class="right">
                            @item.Text<br />@item.Datetime.ToPersianDate()<b>
                                @{
                                    if (item.Status == 0)
                                    {<span style="color:silver;"><b>✓</b></span>}
                                    else if (item.Status == 1)
                                    {<span style="color:silver;"><b>✓✓</b></span>}
                                    else if (item.Status == 2)
                                    {<span style="color:darkblue;"><b>✓✓</b></span>}
                                }

                            </b>
                        </div>
                    }
                    <br />
                }
                <div id="jj"></div>
            </div>
        </div>

        <hr />
        <div id="modal-footer">
            <table style="width:100%;padding:10px">
                <tr>
                    <td>
                        <input type="text" id="text" style="border:solid 3px blue;width:100%" class="form-control" />
                    </td>
                    <td width="70px">
                        <input type="submit" style="margin-top:16px;height:34px;margin-left:-3px" class="btn btn-primary" value="ارسال پیام" onclick="SendMessage(@ViewBag.id)" />
                    </td>
                </tr>
            </table>
        </div>

    </div>
</div>
