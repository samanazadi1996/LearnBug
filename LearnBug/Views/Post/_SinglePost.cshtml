@model Models.Entities.Post
<div class="col-lg-4">
    <div class="panel panel-border panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Subject</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-12 form-group">
                <div class="col-md-5">
                    @Html.Label("مدرس : ")
                </div>
                <div class="col-md-7">
                    <a href="@Url.Action("Profile","User",new {id=Model.User.Username})">
                        @Html.DisplayFor(model => model.User.Name)
                    </a>
                </div>
            </div>
            <div class="col-md-12 form-group">
                <div class="col-md-5">
                    @Html.Label("گروه مطلب : ")
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Group.Name)
                </div>
            </div>
            <div class="col-md-12 form-group">
                <div class="col-md-5">
                    @Html.Label("نظرات : ")
                </div>
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Comments.Count)
                </div>
            </div>
            <div class="col-md-12 form-group">
                <div class="col-md-5">
                    @Html.Label("ساعت و تاریخ : ")
                </div>
                <div class="col-md-7">
                    @Model.InsertDateTime.ToPersianDate()
                </div>
            </div>

            <div class="col-md-12 form-group">
                <div class="col-md-5">
                    @Html.Label("قیمت : ")
                </div>
                <div class="col-md-7">
                    @(Model.Price == null ? "Free" : Model.Price?.ToPrice())
                </div>
            </div>
            <div class="col-md-12 form-group">
                @using (Html.BeginForm("ViewPost", "Post", new { id = Model.Id }))
                {
                    <div class="col-md-6">
                        <button class="btn btn-success btn-block"> مشاهده</button>
                    </div>
                }
                @if (Model.User.Username == User.Identity.Name)
                {
                    <div class=" col-md-6">
                        <a href="@Url.Action("Edit", "Post", new { id = Model.Id })" class="btn btn-info btn-trans waves-effect waves-warning m-b-5"><i class="zmdi zmdi-edit"></i></a>
                        <a class="btn btn-danger btn-trans waves-effect waves-warning m-b-5"><i class="zmdi zmdi-delete"></i></a>
                    </div>
                }
                else
                {
                    <div class=" col-md-6">
                        <a class="btn btn-warning btn-trans waves-effect waves-warning m-b-5" onclick="bookmark('@Model.Id');"><i class="zmdi zmdi-bookmark"></i></a>
                    </div>
                }

            </div>

        </div>
    </div>
</div>