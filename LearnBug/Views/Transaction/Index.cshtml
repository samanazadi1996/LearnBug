@model IEnumerable<LearnBug.Models.DomainModels.Transaction>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}
<div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">تراکنش های من</div>
            <div class="panel-body">
                <div class="grid-view">
                    <table class="table table-hover table-striped">
                        <tr>
                            <th>#</th>
                            <th>تراکنش</th>
                            <th>تاریخ</th>
                            <th>مبلغ</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.Charge ? "+":"-")</td>
                                <td>@item.Datetime.ToPersianDate()</td>
                                <td>@item.Price.ToPrice()</td>
                            </tr>
                        }
                    </table>
                </div>
                <!-- -->
            </div>
        </div>
    </div>
</div>
