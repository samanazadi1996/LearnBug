@model IEnumerable<LearnBug.Models.DomainModels.Transaction>
<div>
    <center><b style="font-size:18px;" id="modal-title">تراکنش های من</b></center>
</div>

<hr />
<div class="pre-scrollable mce-arrow-down">
    <table class="table table-hover table-striped">
        <tr>
            <th>#</th>
            <th>تراکنش</th>
            <th>تاریخ</th>
            <th>مبلغ</th>
        </tr>
        @{int a = 1;}
            @foreach (var item in Model)
            {
            <tr>
                <td>@(a++) </td>
                <td>@(item.Charge ? "+" : "-")</td>
                <td>@item.Datetime.ToPersianDate()</td>
                <td>@item.Price.ToPrice()</td>
            </tr>
        }
    </table>


</div>
<hr />
<div>
    <center>
        <input type="submit" class="btn btn-success" onclick="" value="save" />
        <input type="submit" class="btn btn-danger" onclick="document.getElementById('bodypartial').innerHTML=''" value="انصراف" />
    </center>

</div>

