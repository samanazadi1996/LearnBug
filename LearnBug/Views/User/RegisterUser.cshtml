@model Models.Entities.User
    @{ 
            ViewBag.Title = "ثبت نام";
    }
@section styles{
    <link href="~/Scripts/PersianDateTimePicker/jquery-ui-datetimepicker.min.css" rel="stylesheet" />
    <style>
        .mytxt{
            width:100px;
        }
    </style>
}
<div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">ثبت نام</div>
            <div class="panel-body">
                <!-- -->
                <div id="w1" class="grid-view">
                    @using (Html.BeginForm("RegisterUser", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            @Html.ValidationSummary(true)
                            <div style="color:@ViewBag.style">
                                <h1>@ViewBag.message</h1>
                            </div>
                            <div style="width:200px;">
                                <span class="mytxt">نام کاربری</span><br />
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Username)
                            </div>

                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">نام</span><br />
                                @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.name)
                            </div>

                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">ایمیل</span><br />
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>

                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">رمز عبور</span><br />
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control" , type="password" })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>

                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">تاریخ تولد</span><br />
                                @Html.TextBoxFor(model => model.Dateofbirth, new { @class = "form-control",autocomplete="off"})
                                @Html.ValidationMessageFor(model => model.Dateofbirth)
                            </div>

                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">جنسیت</span><br />
                                <select name="Gender" class=" form-control" id="Gender">
                                    <option value="0">نا مشخص</option>
                                    <option value="1">مرد</option>
                                    <option value="2">زن</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Gender)
                            </div>

                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">بیوگرافی</span><br />
                                @Html.TextBoxFor(model => model.Biography, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Biography)
                            </div>

                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">شماره تلفن</span><br />
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>

                            <div class="form-group" style="width:200px;">
                                <span class="mytxt">محل سکونت</span><br />
                                                                    <select id="loc" name="Location" class="form-control">
                                                                        <option value="value">text</option>
                                                                    </select>
                                
                                 @*@Html.TextBoxFor(model => model.Location, new { @class = "form-control" })*@
                                @Html.ValidationMessageFor(model => model.Location)
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button class="btn btn-info"><div class="fa fa-2x fa-plus"> ثبت نام </div></button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- -->
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/PersianDateTimePicker/jquery-ui-datetimepicker.min.js"></script>
    <script>
        $(function () {
            $("#Dateofbirth").datepicker();
            $.ajax({
                url: "https://api.yarbox.co/api/vv2/provinces",
                type: "GET",
                dataType: "Json",
                success: function (result) {
                    str = "";
                    result.items.forEach(function (item) {
                        str += "<option>" + item + "</option>"

                    });
                    $("#loc").html(str)
                },
                error: function () {
                    alert("خطا!");
                }
            });
        });
    </script>
}
