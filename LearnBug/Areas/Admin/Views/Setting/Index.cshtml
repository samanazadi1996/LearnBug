@model IEnumerable<Models.Entities.Setting>

@{
    ViewBag.Title = "تنظیمات";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="col-lg-12">
    <div class="card-box">
        <fieldset>
            <!-- -->
            <table class="table table-hover table-bordered table-striped">
                <tr>
                    <th>#</hr>
                    <th>name</hr>
                    <th>Type</hr>
                    <th></hr>
                </tr>
                @{int a = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(a++)</td>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("Edit","Setting",new { @item.Id})"><i class="zmdi zmdi-edit" ></i></a>
                        </td>
                    </tr>
                }
            </table>
            <!-- -->
        </fieldset>
    </div>
</div>


@section Scripts {
}
