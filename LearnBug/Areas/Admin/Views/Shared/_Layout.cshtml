<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="~/Files/Picture/Logo/Logo.png" />

    <title>@ViewBag.title</title>
    <!-- App CSS -->
    <link href="~/Content/Mr-Admin/assets/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Mr-Admin/assets/css/responsive.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/Mr-Admin/assets/js/modernizr.min.js"></script>
    @RenderSection("styles", false)
</head>


<body class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left">
                <a href="/home/Index" class="logo">
                    <span>Lear<span>nBug</span></span>
                    <i>
                        <img src="~/Files/Picture/Logo/Logo.png" class="img-thumbnail img-responsive" />
                    </i>
                </a>
            </div>

            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container">

                    <!-- Page title -->
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button class="button-menu-mobile open-left">
                                <i class="zmdi zmdi-menu"></i>
                            </button>
                        </li>
                        <li>
                            <h4 class="page-title">@ViewBag.title</h4>
                        </li>
                    </ul>

                    <!-- Right(Notification and Searchbox -->
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <div class="notification-box">
                                    <ul class="list-inline m-b-0">
                                        <li>
                                            <a href="/Post/Create" class="text-success">
                                                <i class="fa fa-plus-square"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>&nbsp;</li>
                            <li>
                                <div class="notification-box">
                                    <ul class="list-inline m-b-0">
                                        <li>
                                            <a href="/Message/Index" class="text-info">
                                                <i class="zmdi zmdi-comment"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>&nbsp;</li>
                            <li>
                                <!-- Notification -->
                                <div class="notification-box">
                                    <ul class="list-inline m-b-0">
                                        <li>
                                            <a href="javascript:void(0);" class="right-bar-toggle text-warning">
                                                <i class="zmdi zmdi-notifications-none"></i>
                                            </a>
                                            <div class="noti-dot">
                                                <span class="dot"></span>
                                                <span class="pulse"></span>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <!-- End Notification bar -->
                            </li>
                            <li>&nbsp;</li>
                        }

                        <li class="hidden-xs">
                            <form role="search" class="app-search">
                                <input type="text" placeholder="به دنبال چه می گردی ؟؟؟"
                                       class="form-control">
                                <a href="~/Content/Mr-Admin/"><i class="fa fa-search"></i></a>
                            </form>
                        </li>
                    </ul>

                </div><!-- end container -->
            </div><!-- end navbar -->
        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">

                <!-- User -->
                @Html.Action("Avatar", "User")
                <!-- End User -->
                <!--- Sidemenu -->
                <!-- Sidebar -->
                <div class="clearfix"></div>

            </div>

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">

                    <div class="row">
                        @RenderBody()
                    </div>
                    <!-- End row -->

                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer">
                @Html.Action("Footer", "Common")
            </footer>

        </div>
        <!-- End content-page -->
        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="side-bar right-bar">
                @Html.Action("Notification", "Common")
            </div>
        }

        <!-- /Right-bar -->

    </div>
    <!-- END wrapper -->



    <script>
        var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <script src="~/Content/Mr-Admin/assets/js/jquery.min.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/bootstrap-rtl.min.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/detect.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/fastclick.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.slimscroll.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.blockUI.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/waves.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.nicescroll.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="~/Content/Mr-Admin/assets/js/jquery.core.js"></script>
    <script src="~/Content/Mr-Admin/assets/js/jquery.app.js"></script>
    @RenderSection("scripts", false)
</body>
</html>